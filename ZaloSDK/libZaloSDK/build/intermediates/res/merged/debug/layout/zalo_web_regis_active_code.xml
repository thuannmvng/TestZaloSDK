<LinearLayout
    android:id="@+id/parent1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  
     <TextView android:id="@+id/term"
         android:layout_gravity="center_horizontal"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_marginTop="20dp"
         android:textColor="@color/black"
         android:text="@string/info_text_activecode"
         android:gravity="center_horizontal"
         />

     <TextView android:id="@+id/phone_number"
         android:layout_gravity="center_horizontal"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_marginTop="20dp"
         android:layout_marginBottom="20dp"
         android:textColor="@color/black"
         android:text="(+84) 898 308 827"
         android:gravity="center_horizontal"
         android:textSize="23sp"
         />

     <EditText
         android:id="@+id/edti_activecode"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/white"
         android:hint="@string/hint_nhap_ma_kick_hoat"
         android:inputType="phone"
         android:maxLength="8"
         android:paddingBottom="10dp"
         android:paddingLeft="15dp"
         android:paddingRight="15dp"
         android:paddingTop="10dp" />

     <TextView android:id="@+id/countresend"
         android:layout_gravity="center_horizontal"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_marginTop="20dp"
         android:textColor="@color/black"
         android:text="@string/count_activecode"
         android:gravity="center_horizontal"
         />
     
     <TextView
         android:id="@+id/btn_continue"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:text="@string/txt_kich_hoat"
         android:textColor="@color/white"
         android:background="@drawable/zalo_regis_rounded"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingLeft="60dp"
         android:paddingRight="60dp"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         />
     
     
     
     <TextView android:id="@+id/btn_send_again"
         android:layout_gravity="center_horizontal"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:padding="10dp"
         android:layout_marginTop="10dp"
         android:textColor="@color/black"
         android:text="@string/regis_send"
         android:gravity="center_horizontal"
         />
</LinearLayout>
<!--
</ScrollView>-->
</LinearLayout>